<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:reactiveUi="http://reactiveui.net"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MarkDoc.App.Views.MainWindow"
        Icon="/Assets/logo.ico"
        Name="WindowHost"
        Title="MarkDoc">

  <Grid RowDefinitions="Auto, *">
    <Grid Name="TitleBarHost" ColumnDefinitions="Auto,*" Background="Transparent" IsVisible="False">
      <!-- Image control for your Icon -->
      <Image Source="/Assets/logo.ico" MaxHeight="16" Stretch="Uniform" IsHitTestVisible="False" />

      <!-- TextBlock for the Window caption -->
      <TextBlock Grid.Column="1" Text="{Binding ElementName=WindowHost, Path=Title}" VerticalAlignment="Center" Margin="5, 0, 0, 0" IsHitTestVisible="False" />
    </Grid>
    
    <reactiveUi:TransitioningContentControl Grid.Row="1" Name="MainContent"/>
    <!-- <ContentPresenter Name="MainContent"/> -->
  </Grid>

</Window>
