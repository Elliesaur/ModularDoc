<UserControl
  mc:Ignorable="d"
  x:Class="MarkDoc.Views.GitMarkdown.LinkerStepView"
  xmlns="https://github.com/avaloniaui"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:gitMarkdown="clr-namespace:MarkDoc.ViewModels.GitMarkdown;assembly=MarkDoc.ViewModels.GitMarkdown"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <StackPanel>
    <ComboBox
      Items="{Binding Options}"
      SelectedItem="{Binding Selected}"
      Width="150">
      <ComboBox.ItemTemplate>
        <DataTemplate DataType="{x:Type gitMarkdown:Selection}">
          <Label Content="{Binding DisplayName}" />
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>
    
    <ToggleSwitch Content="Create links to source code" OnContent="Enabled" OffContent="Disabled" IsChecked="{Binding LinksToSourceCode}"/>
    <Grid ColumnDefinitions="*, 10, *, 10, *" IsEnabled="{Binding LinksToSourceCode}">
      <TextBox Grid.Column="0" Watermark="Username" Text="{Binding GitUser}"/>
      <TextBox Grid.Column="2" Watermark="Repository name" Text="{Binding GitRepository}"/>
      <TextBox Grid.Column="4" Watermark="Branch name" Text="{Binding GitBranch}"/>
    </Grid>
  </StackPanel>

</UserControl>
