<UserControl
  mc:Ignorable="d"
  x:Class="MarkDoc.Views.GitMarkdown.GlobalStepView"
  xmlns="https://github.com/avaloniaui"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:gitMarkdown="clr-namespace:MarkDoc.ViewModels.GitMarkdown;assembly=MarkDoc.ViewModels.GitMarkdown"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel>
    <Label>Namespaces to process</Label>
    <TreeView
      Items="{Binding AvailableNamespaces}"
      Name="AvailableNamespacesTree"
      SelectionMode="Single">
      <TreeView.ItemTemplate>
        <TreeDataTemplate DataType="{x:Type gitMarkdown:NamespaceNode}" ItemsSource="{Binding Nodes}">
          <DockPanel LastChildFill="True">
            <CheckBox
              DockPanel.Dock="Left"
              IsChecked="{Binding IsChecked}"
              IsEnabled="{Binding IsEnabled}"
              Margin="0,0,10,0" />
            <Border>
              <ToolTip.Tip>
                <Label Content="{Binding FullNamespace}" />
              </ToolTip.Tip>
              <Label
                Content="{Binding DisplayName}"
                DockPanel.Dock="Right"
                VerticalAlignment="Center" />
            </Border>
          </DockPanel>
        </TreeDataTemplate>
      </TreeView.ItemTemplate>
    </TreeView>
  </StackPanel>
</UserControl>
